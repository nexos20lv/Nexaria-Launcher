{
  "name": "nexaria-launcher",
  "version": "1.0.1",
  "description": "Nexaria Minecraft Launcher",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Nexaria",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.8.3",
    "minecraft-launcher-core": "^3.14.0",
    "node-fetch": "2.7.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "fr.nexaria.launcher",
    "productName": "Nexaria Launcher",
    "copyright": "Copyright Â© 2024 Nexaria",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nexos20lv",
        "repo": "Nexaria-Launcher"
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
